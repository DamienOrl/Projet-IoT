suffix=none # No backup (use git!)
# Brackets
style=stroustrup
add-brackets
# Padding
unpad-paren
pad-oper
pad-header
# Indentation
indent=spaces=4
indent-switches
convert-tabs
# Pointer and references
align-pointer=name
align-reference=name
# Formatting
min-conditional-indent=2
# max-instatement-indent=8 # 2 * indent-length # need a patched version to use this feature
					       # see: https://sourceforge.net/p/astyle/bugs/396/
max-code-length=100 # Reduce to 80?
# Miscellanous
preserve-date
formatted # Do not display unchanged files
